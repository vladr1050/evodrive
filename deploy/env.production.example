# Production env template. Copy to .env on the server. No secrets in repo.
# Fill in APP_KEY (generate with: php artisan key:generate --show), DB_PASSWORD, etc.

APP_NAME=EvoDrive
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://www.evodrive.lv

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=warning

# PostgreSQL (Docker service name: postgres)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=evodrive
DB_USERNAME=evodrive
DB_PASSWORD=

# Redis (Docker service name: redis)
SESSION_DRIVER=redis
CACHE_STORE=redis
QUEUE_CONNECTION=redis

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

FILESYSTEM_DISK=local
BROADCAST_CONNECTION=log

MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@evodrive.lv"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
